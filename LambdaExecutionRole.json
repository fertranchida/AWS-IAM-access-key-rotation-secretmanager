{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:eu-central-1:209280158933:*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:eu-central-1:209280158933:log-group:/aws/lambda/IAKR-Rotate1:*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:DeleteAccessKey",
                "secretsmanager:GetSecretValue",
                "iam:UpdateAccessKey",
                "secretsmanager:ListSecrets",
                "secretsmanager:UpdateSecret",
                "iam:CreateAccessKey",
                "iam:ListAccessKeys"
            ],
            "Resource": "*"
        }
    ]
}
